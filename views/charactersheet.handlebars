  <div class="container">
    <h1>D&D Character Sheet</h1>
    
    <div class="character-info">
      <h2 class="section-title">Personal Information</h2>
      <div class="field">
        <label for="character-name">Character Name:</label>
        <input required style="border-color:lime" type="text" id="character-name" />
      </div>
      <div class="field">
        <label for="player-name">Player Name:</label>
        <input type="text" id="player-name" />
      </div>
      <div class="field">
        <label for="race">Race:</label>
        <input required style="border-color:lime" type="text" id="character-race" />
      </div>
      <div class="field">
        <label for="class">Class:</label>
        <input required style="border-color:lime" type="text" id="character-class" />
      </div>
      <div class="field">
        <label for="background">Background:</label>
        <input required style="border-color:lime" type="text" id="character-background" />
      </div>
      <div class="field">
        <label for="alignment">Alignment:</label>
        <input type="text" id="character-alignment" />
      </div>
      <div class="field">
        <label for="proficiency">Proficiency:</label>
        <input type="number" id="proficiency" min="1" max="20" />
      </div>
      <div class="field">
        <label for="walking-speed">Walking Speed (ft):</label>
        <input type="number" id="walking-speed" min="1" max="200" />
      </div>
      <div class="field">
        <label for="armor-class">Armor Class:</label>
        <input type="number" id="armor-class" min="1" max="20" />
      </div>
      <div class="field">
        <label for="initiative">Initiative:</label>
        <input type="number" id="initiative" min="1" max="20" />
      </div>
      <div class="field">
        <label for="health">Health:</label>
        <input type="number" id="health" min="1" max="200" />
      </div>
    </div>

    <div class="section">
      <h2 class="section-title">Attributes</h2>
      <div class="field">
        <label for="strength">Strength:</label>
        <input required style="border-color:lime" type="number" id="strength" min="1" max="20" />
      </div>
      <div class="field">
        <label for="dexterity">Dexterity:</label>
        <input required style="border-color:lime" type="number" id="dexterity" min="1" max="20" />
      </div>
      <div class="field">
        <label for="constitution">Constitution:</label>
        <input required style="border-color:lime" type="number" id="constitution" min="1" max="20" />
      </div>
      <div class="field">
        <label for="intelligence">Intelligence:</label>
        <input required style="border-color:lime" type="number" id="intelligence" min="1" max="20" />
      </div>
      <div class="field">
        <label for="wisdom">Wisdom:</label>
        <input required style="border-color:lime" type="number" id="wisdom" min="1" max="20" />
      </div>
      <div class="field">
        <label for="charisma">Charisma:</label>
        <input required style="border-color:lime" type="number" id="charisma" min="1" max="20" />
      </div>
    </div>

    <div class="section">
        <h2 class="section-title">Saving Throws</h2>
        <div class="field">
          <label for="strength">Strength:</label>
          <input type="number" id="strength-save" min="1" max="20" />
          <label for="strength-proficiency">Proficient:</label>
          <input type="checkbox" id="strength-proficiency" />
        </div>
        <div class="field">
